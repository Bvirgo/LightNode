<# } else { #>
        IEnumerator <#= contract.InterfaceName #>.<#= operation.OperationName + ((addAsyncSuffix) ? "Async" : "") #>(<#= operation.ParameterString #><#= operation.Parameters.Any() ? ", " : "" #>Action<<#= BeautifyType(operation.ReturnType) #>> onCompleted, Action<Exception> onError, Action<float> reportProgress)
<# } #>
